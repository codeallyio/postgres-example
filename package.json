{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=10"
  },
  "main": "./build/index.js",
  "dependencies": {
    "@sendgrid/mail": "^6.5.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "core-js": "^3.6.4",
    "cors": "^2.8.5",
    "dataloader": "^2.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "faker": "^4.1.0",
    "graphql": "^15.0.0-rc.1",
    "graphql-relay": "^0.6.0",
    "graphql-voyager": "^1.0.0-rc.29",
    "idx": "^2.5.6",
    "knex": "^0.20.8",
    "moment-timezone": "^0.5.27",
    "pg": "^7.18.2",
    "pretty-error": "^2.1.1",
    "slugify": "^1.3.6",
    "source-map-support": "^0.5.16",
    "uuid": "^3.4.0",
    "validator": "^12.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-typescript": "^7.8.3",
    "@babel/register": "^7.8.3",
    "@types/express": "^4.17.2",
    "@types/faker": "^4.1.9",
    "@types/graphql-relay": "^0.4.11",
    "@types/lodash": "^4.14.149",
    "@types/minimist": "^1.2.0",
    "@types/moment-timezone": "^0.5.12",
    "@types/uuid": "^3.4.7",
    "@types/validator": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "babel-jest": "^25.1.0",
    "babel-plugin-idx": "^2.4.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "minimist": "^1.2.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "start": "nodemon ./src",
    "start-debug": "nodemon --inspect ./src",
    "lint": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" .",
    "fix": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" --fix .",
    "check": "ts check",
    "test": "jest --testEnvironment=node",
    "build": "babel ./src -x .ts -d build --delete-dir-on-start --verbose",
    "update-schema": "babel-node -x .ts ./scripts/update-schema",
    "db": "babel-node -x .ts --experimental-repl-await ./scripts/db",
    "db-backup": "babel-node -x .ts ./scripts/db-backup",
    "db-restore": "babel-node -x .ts ./scripts/db-restore",
    "db-change": "knex migrate:make",
    "db-migrate": "knex migrate:latest",
    "db-rollback": "knex migrate:rollback",
    "db-seed": "knex seed:run",
    "db-version": "knex migrate:currentVersion",
    "db-reset-dev": "yarn db-rollback --env=dev && yarn db-migrate --env=dev && yarn db-restore --env=dev",
    "db-reset-test": "yarn db-rollback --env=test && yarn db-migrate --env=test && yarn db-restore --env=test",
    "db-reset-prod": "yarn db-rollback --env=prod && yarn db-migrate --env=prod && yarn db-restore --env=prod",
    "psql": "babel-node -x .ts ./scripts/psql",
    "deploy-test": "gcloud --project=example-test functions deploy api --region=us-central1 --allow-unauthenticated --entry-point=api --memory=2048MB --runtime=nodejs10 --trigger-http --source=.",
    "deploy-prod": "gcloud --project=example-prod functions deploy api --region=us-central1 --allow-unauthenticated --entry-point=api --memory=2048MB --runtime=nodejs10 --trigger-http --source=."
  }
}
